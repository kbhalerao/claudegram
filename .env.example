# ============================================================================
# ClaudeGram Configuration
# ============================================================================

# Deployment Mode: "local" or "cloud"
# - local: Uses local SQLite database and Telegram polling (single device)
# - cloud: Uses Cloudflare Workers backend (multi-device sync)
DEPLOYMENT_MODE=cloud

# ============================================================================
# Cloud Mode Configuration (when DEPLOYMENT_MODE=cloud)
# ============================================================================

# Cloudflare Worker URL (deployed Worker endpoint)
CLOUDFLARE_WORKER_URL=https://claudegram.your-subdomain.workers.dev

# API Key for Worker authentication
CLOUDFLARE_API_KEY=your-secret-api-key

# User ID (unique identifier - use your email or username)
USER_ID=user-your-email@example.com

# ============================================================================
# Local Mode Configuration (when DEPLOYMENT_MODE=local)
# ============================================================================

# Telegram Bot Token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID (get from @userinfobot on Telegram)
TELEGRAM_CHAT_ID=your_chat_id_here

# Default timeout for requests in seconds (default: 300)
REQUEST_TIMEOUT_DEFAULT=300

# Path to local SQLite database (default: ./telegram_io_cache.db)
DATABASE_PATH=./telegram_io_cache.db
